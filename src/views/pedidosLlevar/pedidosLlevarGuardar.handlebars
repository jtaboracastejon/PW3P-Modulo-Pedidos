
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- jquery validation -->
          <div class="card card-primary">
            <div class="card-header">
              <h2 class="card-title">Guarde un pedido</h2>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form id="quickForm" action="/app/pedidosLLevar/guardar/" method="post">
              <div class="card-body">
                <div class="form-row">
                  <div class="form-group">
                    <label for="idpedido">Numero de pedido</label>
                    <select class="form-control cmbbuscar select2 select2-hidden-accessible" style="width: 100%;"
                    data-select2-id="1" tabindex="-1" aria-hidden="true" name="usuario" id="selectPedido">
                    <option value="" selected>Seleccione un valor</option>
                    {{#each listarDetalles}}   
                    <option value="{{NumeroPedido}}">{{NumeroPedido}}</option>
                    {{/each}}
                  </select>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="idpedido">Cliente</label>
                    <select class="form-control cmbbuscar2 select2 select2-hidden-accessible" style="width: 100%;"
                    data-select2-id="2" tabindex="-1" aria-hidden="true" name="usuario" id="selectCliente">
                    <option value="" selected>Seleccione un valor</option>
                   {{#each listarClientes}} 
                    <option value="{{idcliente}}">{{nombre}}</option>
                    {{/each}}
                  </select>
                  </div>
                </div>

                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="button" class="btn btn-primary toastrDefaultSuccess guardarLlevarPedido" value="/app/pedidosLLevar/guardar/">Guardar</button>
                </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">

        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  
