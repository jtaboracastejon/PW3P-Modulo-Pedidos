<div class="wrapper">
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          <!-- jquery validation -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Datos generales <small>Entrega Pedidos</small></h3>
            </div>
            <!-- /.card-header -->
            <form id="quickForm" action="/app/entregaPedidos/guardar/" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="inputdetalle">Id Detalle Pedidos</label>
                  <input type="number" name="inputdetalles" class="form-control" id="inputdetalle"
                    placeholder="Escriba el id detalle pedido" required>
                </div>
                <div class="form-group">
                  <label for="textareaDescricion">Usuario</label>
                  <select class="form-control cmbbuscar select2 select2-hidden-accessible" style="width: 100%;"
                    data-select2-id="1" tabindex="-1" aria-hidden="true" name="usuario" id="selectusuario">
                    <option value="" selected>Seleccione un valor</option>
                    {{#each listausuarios}}
                    <option value="{{idregistro}}">{{LoginUsuario}}</option>
                    {{/each}}
                  </select>
                </div>
                <div class="form-group">
                  <label for="inputfecha">Fecha Hora</label>
                  <input type="date" name="inputfechas" class="form-control" id="inputfecha"
                    placeholder="Escriba la descripcion del cargo">
                </div>
                <div class="form-group">
                  <label for="inputentrega">Id entrega</label>
                  <input type="text" name="inputentregas" class="form-control" id="inputentrega"
                    placeholder="Escriba el Id de la entrega">
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <button type="button" class="btn btn-primary toastrDefaultSuccess guardarEntregas"
                  value="/app/entregaPedidos/guardar/">Guardar</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-6">

        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>

  <script type="text/javascript">
    console.log('hola')
    document.addEventListener('DOMContentLoaded', function () {
      $('.cmbbuscar').select2();
    });
  </script>